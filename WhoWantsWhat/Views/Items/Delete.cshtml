@model WhoWantsWhat.Models.Item

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this item?</h3>
<h4>(Deleting this item will also remove it from all lists)</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Link != null)
            {
                <a target="_blank" href="@Model.Link">Link</a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Purchased)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Purchased)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
