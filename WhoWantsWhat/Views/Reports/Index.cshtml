@model WhoWantsWhat.Models.ViewModels.ReportsViewModels.ListTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Reports</h1>


<h3 class="mt-5">Spending Report:</h3>
<form asp-action="SpendingReport" asp-controller="Reports" class="report-select-form mt-4">
    <div class="form-group">
        <select asp-for="ListTypeId" class="form-control" asp-items="@Model.ListTypeOptions"></select>
        <span asp-validation-for="ListTypeId" class="text-danger"></span>
    </div>
    <div class="form-group ml-3">
        <select asp-for="Year" class="form-control" asp-items="@Model.YearOptions"></select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group ml-3">
        <input type="submit" value="View Report" class="btn btn-primary" />
    </div>
</form>
@if (TempData["SpendingErrorMessage"] != null)
{
    <div class="alert alert-dismissible alert-danger col-6">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div class="text-danger mt-2 mb-2">@TempData["SpendingErrorMessage"] </div>
    </div>
}

<h3 class="mt-5">Shopping Report:</h3>
<form asp-action="ShoppingReport" asp-controller="Reports" class="report-select-form mt-4">
    <div class="form-group">
        <select asp-for="ListTypeId" class="form-control" asp-items="@Model.ListTypeOptions"></select>
        <span asp-validation-for="ListTypeId" class="text-danger"></span>
    </div>
    <div class="form-group ml-3">
        <select asp-for="Year" class="form-control" asp-items="@Model.YearOptions"></select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group ml-3">
        <input type="submit" value="View Report" class="btn btn-primary" />
    </div>
</form>
@if (TempData["ShoppingErrorMessage"] != null)
{
    <div class="alert alert-dismissible alert-danger col-6">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <div class="text-danger mt-2 mb-2">@TempData["ShoppingErrorMessage"] </div>
    </div>
}