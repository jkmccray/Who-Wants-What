@model IEnumerable<WhoWantsWhat.Models.GiftList>

@{
    ViewData["Title"] = "Index";
}

<div class="form-inline">
    <h1 class="col-lg-6 col-md-7">My Gift Idea Lists</h1>
    <div class="col-lg-6 col-md-5 text-right">
        <a class="btn btn-primary" asp-action="Create">Create New Gift List</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                For
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateNeeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name.ToString(), "Details", new { id = item.GiftListId } )
            </td>
            <td>
                @if (item.ReceiverId != null)
                {
                <span>@item.Receiver.FirstName @item.Receiver.LastName</span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.ReceiverName)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListType.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNeeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                <a class="btn btn-outline-primary pt-2 pb-2 pr-3 pl-3 mb-2" asp-action="Delete" asp-route-id="@item.GiftListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
